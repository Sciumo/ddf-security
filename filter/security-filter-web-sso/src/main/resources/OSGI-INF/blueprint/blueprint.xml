<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
  http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="contextPolicyManager"
               interface="org.codice.ddf.security.policy.context.ContextPolicyManager"
               availability="optional"/>

    <bean id="sortedHandlerList" class="ddf.security.common.util.SortedServiceList">
        <argument ref="blueprintBundleContext" />
    </bean>
    <reference-list id="handlers" interface="org.codice.ddf.security.handler.api.AuthenticationHandler"
                    availability="optional">
        <reference-listener bind-method="bindPlugin"
                            unbind-method="unbindPlugin" ref="handlerSortedList" />
    </reference-list>

    <bean id="filter" class="org.codice.ddf.security.filter.websso.WebSSOFilter">
        <property name="handlerList" ref="sortedHandlerList"/>
        <property name="contextPolicyManager" ref="contextPolicyManager"/>
    </bean>

    <service ref="filter"
             interface="javax.servlet.Filter" ranking="100">
        <service-properties>
            <entry key="filter-name" value="token-filter"/>
            <entry key="urlPatterns" value="/*"/>
        </service-properties>
    </service>

</blueprint>
