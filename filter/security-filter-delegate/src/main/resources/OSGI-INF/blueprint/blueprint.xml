<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <!-- Get a List of all ServletContexts. Every Web App that gets registered will have a ServletContext.
  More Info on ServletContext: http://docs.oracle.com/cd/E17802_01/products/products/servlet/2.5/docs/servlet-2_5-mr2/ -->
  <reference-list id="servletContexts" interface="javax.servlet.ServletContext">
    <reference-listener ref="filterInjector" bind-method="injectFilter" unbind-method="removeFilter" />
  </reference-list>
  
  <bean id="filterInjector" class="org.codice.ddf.security.filter.delegate.FilterInjector" destroy-method="cleanup">
    <argument ref="delegatingServletFilter" />
  </bean>
  
  <reference id="contextPolicyManager" interface="org.codice.security.policy.context.ContextPolicyManager" availability="optional" />
  
  <reference id="webContainer" interface="org.ops4j.pax.web.service.WebContainer" />
  
  <bean id="delegatingServletFilter" class="org.codice.ddf.security.filter.delegate.DelegateServletFilter" >
    <argument ref="blueprintBundleContext" />
    <property name="contextPolicyManager" ref="contextPolicyManager" />
  </bean> 

</blueprint>